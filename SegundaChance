    const seriesButtons = document.querySelectorAll('.series-btn');

    seriesButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Identifica qual s√©rie
        const seriesId = button.getAttribute('data-series');
        const chaptersList = document.getElementById(seriesId + 'Chapters');

        // Alterna exibi√ß√£o da lista de cap√≠tulos
        const isHidden = chaptersList.style.display === 'none';
        chaptersList.style.display = isHidden ? 'block' : 'none';

        // Gerenciar classe "active" no bot√£o da s√©rie
        if (isHidden) {
          button.classList.add('active');
        } else {
          button.classList.remove('active');
        }
      });
    });

    /***************************************************
     * L√ìGICA DE EXIBIR CAP√çTULOS
     ***************************************************/
    const chapterButtons = document.querySelectorAll('.chapter-btn');
    const allChapters = document.querySelectorAll('.chapter-container');

    chapterButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        // Pega o ID do cap√≠tulo
        const chapterId = btn.getAttribute('data-chapter');

        // Fecha todos os cap√≠tulos
        allChapters.forEach(chapter => {
          chapter.classList.remove('active', 'fadeIn');
        });

        // Remove classe active de todos os bot√µes de cap√≠tulo
        chapterButtons.forEach(b => {
          b.classList.remove('active');
        });

        // Abre o cap√≠tulo selecionado
        const chapterToShow = document.getElementById(chapterId);
        chapterToShow.classList.add('active', 'fadeIn');

        // Marca o bot√£o de cap√≠tulo como ativo
        btn.classList.add('active');

        // Ao abrir o cap√≠tulo, exibe o primeiro t√≥pico dele
        showTopic(chapterId, 1);
      });
    });

    /***************************************************
     * L√ìGICA DE T√ìPICOS (SLIDES) DENTRO DOS CAP√çTULOS
     ***************************************************/
    function showTopic(chapterId, topicIndex) {
      const chapterContainer = document.getElementById(chapterId);
      const topicSlides = chapterContainer.querySelectorAll('.topic-slide');

      // Esconde todos os t√≥picos
      topicSlides.forEach(slide => slide.classList.remove('active', 'fadeIn'));

      // Mostra o t√≥pico desejado
      const targetSlide = chapterContainer.querySelector('#' + chapterId + '-topic' + topicIndex);
      if (targetSlide) {
        targetSlide.classList.add('active', 'fadeIn');
      }
    }

    function nextTopic(chapterId, currentTopicIndex) {
      // Pr√≥ximo t√≥pico => currentTopicIndex + 1
      const nextIndex = currentTopicIndex + 1;
      showTopic(chapterId, nextIndex);
    }

    function previousTopic(chapterId, currentTopicIndex) {
      // T√≥pico anterior => currentTopicIndex - 1
      const prevIndex = currentTopicIndex - 1;
      showTopic(chapterId, prevIndex);
    }

    /***************************************************
     * NAVEGA√á√ÉO ENTRE CAP√çTULOS (BOT√ÉO "PR√ìXIMO CAP√çTULO")
     ***************************************************/
    function goToNextChapter(nextChapterId) {
      // Fecha todos os cap√≠tulos
      allChapters.forEach(chapter => {
        chapter.classList.remove('active', 'fadeIn');
      });
      // Remove active de todos os bot√µes
      chapterButtons.forEach(b => {
        b.classList.remove('active');
      });
      // Abre o novo cap√≠tulo
      const nextChapter = document.getElementById(nextChapterId);
      nextChapter.classList.add('active', 'fadeIn');

      // Marca o bot√£o de cap√≠tulo
      const btnToActivate = document.querySelector(`.chapter-btn[data-chapter="${nextChapterId}"]`);
      if (btnToActivate) {
        btnToActivate.classList.add('active');
      }

      // Exibe o primeiro t√≥pico do pr√≥ximo cap√≠tulo
      showTopic(nextChapterId, 1);
      // Rolagem suave ao topo
      window.scrollTo({ top: 0, behavior: "smooth" });
    }

    // Por padr√£o, ao carregar a p√°gina, n√£o exibimos nenhum cap√≠tulo ativo.
    // Se desejar que algum cap√≠tulo j√° abra por padr√£o, basta chamar a fun√ß√£o:
